<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    

<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_user_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/soyoon" />

            <TextView
                android:id="@+id/tv_user_profile_name"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="UserName" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:text="DetailContent" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_interior_image"
            android:layout_width="match_parent"
            android:layout_height="700dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_like_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart_shadow_icon" />

            <TextView
                android:id="@+id/tv_cnt_likes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1000" />

            <ImageView
                android:id="@+id/iv_reply_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/reply_icon" />

            <TextView
                android:id="@+id/tv_cnt_reply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="800" />

            <!-- 여기아래에 invisible 설정해둔건 나중에 공유/스크랩 기능 만들어지면 업데이트할예정입니다. -->

            <ImageView
                android:id="@+id/iv_share_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_cnt_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="70"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_scrap_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_cnt_scrap"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="500"
                android:visibility="invisible" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>
<LinearLayout
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/heart_shadow_icon" />
    <!-- 카톡이모티콘 우선넣어두었지만 나중에는 좋아요 로 바뀌어야됨. -->

    <EditText
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="8"
        android:background="@drawable/edit_text"
        android:focusable="true"
        android:hint="메시지를 입력하세요." />

    <Button
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="2"
        android:text="전송" />

</LinearLayout>

</LinearLayout>