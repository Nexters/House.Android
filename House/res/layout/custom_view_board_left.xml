<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_interior_custom_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#EFEFEF"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/user_1" />

        <TextView
            android:id="@+id/tv_house_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="UserName"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_created_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="50분전"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/chat" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_heart" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_comment" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="10sp" />
        </LinearLayout>
		<TextView
		    android:id="@+id/board_title"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textSize="15sp" 
		    android:textStyle="bold"
		    android:text="하우스 게시판 제목이 오는 자리. "/>
        <TextView
            android:id="@+id/board_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="게시판 컨텐츠가 보여질 부분입니다. "
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_preview_image_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="@drawable/preview_image"
                android:src="@drawable/preview_image_01" />

            <ImageView
                android:id="@+id/iv_preview_image_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="@drawable/preview_image"
                android:src="@drawable/preview_image_02" />

            <ImageView
                android:id="@+id/iv_preview_image_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:padding="1dp"
                android:background="@drawable/preview_image"
                android:src="@drawable/preview_image_03" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>