<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_interior_custom_view"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <!-- 사람프로필사진 + 아이디 + 카테고리 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/house_profile"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/soyoon" />

        <TextView
            android:id="@+id/house_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="left"
            android:textColor="@color/black"
            android:text="ID_soyoon"
            android:textSize="15sp" />

        <TextView 
            android:id="@+id/created_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="1일전"
            android:textColor="@color/black"
            android:textSize="13sp"/>
    </LinearLayout>

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        custom:auto_cycle="false"
        custom:pager_animation="Default"
        custom:pager_animation_span="1100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/interior_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_heart" />

            <TextView
                android:id="@+id/interior_likes_cnt"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_comment" />

            <TextView
                android:id="@+id/interior_reply_cnt"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>