<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_interior_custom_view"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <!-- 사람프로필사진 + 아이디 + 카테고리 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/house_profile"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="1dp"
            android:src="@drawable/soyoon" />

        <TextView
            android:id="@+id/house_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="ID_soyoon"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" >

            <ImageView
                android:id="@+id/icon_down"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/down_icon"/>

            <ImageView
                android:id="@+id/icon_edit"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:alpha="0"
                android:src="@drawable/icon_edit" />

            <ImageView
                android:id="@+id/icon_delete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:alpha="0"
                android:src="@drawable/icon_edit" />
        </FrameLayout>

        <!--
             <TextView
            android:id="@+id/created_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="1일전"
            android:textColor="@color/black"
            android:textSize="13sp" />
        -->
    </LinearLayout>

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        custom:auto_cycle="false"
        custom:pager_animation="Default"
        custom:pager_animation_span="1100" />

    <TextView
        android:id="@+id/interior_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_grey"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_heart" />

        <TextView
            android:id="@+id/interior_likes_cnt"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="20"
            android:layout_marginRight="5dp"
            android:textColor="@color/dark_grey"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_comment" />

        <TextView
            android:id="@+id/interior_reply_cnt"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="20"
            android:textColor="@color/dark_grey"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>