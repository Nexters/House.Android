<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_interior_custom_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:orientation="horizontal"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/chat_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@drawable/chat_right"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#FFFFFF"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:baselineAlignBottom="true"
                android:src="@drawable/icon_heart" />

            <TextView
                android:id="@+id/board_likes_cnt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:text="20"
                android:textColor="@color/house_main_text_color"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:baselineAlignBottom="true"
                android:src="@drawable/icon_comment" />

            <TextView
                android:id="@+id/board_reply_cnt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:text="20"
                android:textColor="@color/house_main_text_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/board_category"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="카테고리"
                android:textColor="@color/house_main_text_color"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/board_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="하우스 앱은 언제 만들어질까요? "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/board_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_preview_image_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="@drawable/preview_image"
                android:padding="1dp"
                android:src="@drawable/preview_image_01" />

            <ImageView
                android:id="@+id/iv_preview_image_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="@drawable/preview_image"
                android:padding="1dp"
                android:src="@drawable/preview_image_02" />

            <ImageView
                android:id="@+id/iv_preview_image_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:background="@drawable/preview_image"
                android:padding="1dp"
                android:src="@drawable/preview_image_03" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/house_profile"
            android:layout_gravity="center_horizontal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_profile_image" />

        <TextView
            android:id="@+id/tv_house_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="UserName"
            android:textColor="@color/house_main_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_created_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="55분전"
            android:textColor="@color/house_main_text_color"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>